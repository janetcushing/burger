<div class="container">
    <header class="row mainHeading">
        <div class="col-md-12">
            <div >
                <br>
                <img class="burgerImg" src="assets/img/burger.png" alt="yum yum burger">
                <br>
                <h2>Eat-Da-Burger!!</h2>
                <br>
            </div>
        </div>
    </header>
</div>


<div class="clear"></div> 

<!-- Pass in data from server.js -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <section >
                <ul>
                    {{#each burger}}
                    <li class="notEaten">
                           <p> <span class="label">ID:</span> {{this.id}}
                            <span class="label">Burger:</span> {{this.burger}}
                            <span class="label">Devoured:</span> {{this.devoured}}</p>
                        <button data-id="{{this.id}}" class="devour">Devour it!
                            <a href="/{{this.id}}"></a>
                        </button>
                    </li>
                    {{/each}}
                </ul>
            </section>
        </div>
        <div class="col-md-6">
            <section >
                {{!-- note: grey out the burgers when they get eaten --}}
                <ul>
                    {{#each burger}}
                    <li class="eaten">
                            <span class="label">ID:</span> {{this.id}}
                            <span class="label">Burger:</span> {{this.burger}}
                            <span class="label">Devoured:</span> {{this.devoured}}
                    </li>
                    {{/each}}
                </ul>
            </section>
        </div>
    </div>
</div>

