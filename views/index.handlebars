<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="newBurger">
                <form class="create-form">
                    <div class="form-group">
                        <input type="text" id="burger" name="burger" class="textarea_msg" placeholder="Enter Burger Here">
                    </div>
                    <button id="submitBtn" class="submitBtn" type="submit">Submit</button>
                    <p class="burger_msg">Enter the Burger that you want and click the "Submit" button</p>
                </form>
            </div>
        </div>
    </div>